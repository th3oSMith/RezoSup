{% extends '::base.html.twig' %}

{% block title %}{{parent()}} - Actualités{% endblock %}



{% block body %}

<h3>Actualités :</h3>



{% for entry in news %}
<div class="newsItem">
	<div class="title"><span class="title"><a href="{{entry.url}}">{{entry.title}}</a></span><br/><span class="author">Le {{entry.date|date('d-m-Y')}} par {{entry.pseudo1}}</span></div>
	<div class="content">{{entry.text|raw}}</div>
</div>
{%endfor%}
{% if page!=1 %}
<a href="{{path('news_page', {'page':page-1})}}">Page précédente</a>
&nbsp;
{% endif %}

{% if dernier==false %}
<a href="{{path('news_page', {'page':page+1})}}">Page suivante</a>
{% endif %}

{% endblock %}
