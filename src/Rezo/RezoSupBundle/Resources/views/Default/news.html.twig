{% extends '::base.html.twig' %}

{% block title %}{{parent()}} - Actualités{% endblock %}



{% block body %}

<h3>Actualités :</h3><br/>


{% for entry in news %}
<div class="newsItem">
	<div class="title"><span class="title">{{entry.title}}</span><br/><span class="author">Le {{entry.date|date('d-m-Y')}} par {{entry.author}}</span></div>
	<div class="content">{{entry.content}}</div>
</div>
{%endfor%}


{% endblock %}
